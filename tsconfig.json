{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "listEmittedFiles": true,
    "esModuleInterop": true,

    "alwaysStrict": true,
    "declaration": true,
    "strict": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

  },
  "references": [
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/server"
    }
  ]
}