{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "lib": ["ES2020"],
    "target": "ES6",
    "module": "ES6",

    "moduleResolution": "Node",

    "listEmittedFiles": true,
    "esModuleInterop": true,

    "alwaysStrict": true,
    "declaration": true,
    "strict": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
  "references": [
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/server"
    }
  ],
 
}