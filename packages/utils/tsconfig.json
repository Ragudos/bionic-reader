{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,

    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build/@types",

    "composite": true,

    "alwaysStrict": true,
    "strict": true,
    
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}