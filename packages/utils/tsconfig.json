{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,

    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build/@types",

    "composite": true,

    "alwaysStrict": true,
    "strict": true,

    "allowJs": true,
    
    "skipLibCheck": true,

    "typeRoots": [
      "./build/@types"
    ],

    "baseUrl": "src",
    "paths": {
      "@/*": ["/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "./built/**/*",
    "./dist/**/*"
  ]
}