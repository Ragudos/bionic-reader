{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "esModuleInterop": true,

    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build/@types",

    "composite": true,

    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "rollup.config*"
  ]
}